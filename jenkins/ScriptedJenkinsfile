node{
    stage('Git Clone'){
        git 'https://github.com/subash-chaudhary/simple-maven-app'
    }

    stage('Build'){
        def mvnHome = tool name: 'maven-3', type: 'maven'
        sh "${mvnHome}/bin/mvn -B -DskipTests clean package"
    }
    
    stage('Test'){
        def mvnHome = tool name: 'maven-3', type: 'maven'
        sh "${mvnHome}/bin/mvn test"
    }
}