pipeline{

    agent any

    stages{
        stage('Git Clone'){
            steps{
                git 'https://github.com/subash-chaudhary/simple-maven-app'
            }
        }

        stage('Build'){
            steps{
                tool name: 'maven-3', type: 'maven'
                sh 'mvn -B -DskipTests clean package'
            }

        }
        stage('Test'){
            steps{
                tool name: 'maven-3', type: 'maven'
                sh 'mvn test'
            }
        }
    }
}